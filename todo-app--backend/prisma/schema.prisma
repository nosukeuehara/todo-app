generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// タスク
model Task {
  id       Int      @id @unique @default(autoincrement())
  start    DateTime @default(now())
  end      DateTime
  comments String
  taskName String
}
